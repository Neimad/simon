{
    "name": "neimad/simon",
    "description": "Simon CMS",
    "authors": [
        {
            "name": "Damien Flament",
            "email": "damien.flament@gmx.com",
            "role": "Developer"
        }
    ],
    "license": "GPL-3.0-only",
    "type": "project",
    "require": {
        "php": "^7.2",
        "doctrine/doctrine-bundle": "^1.8",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "doctrine/phpcr-bundle": "^2.0",
        "doctrine/phpcr-odm": "^1.4",
        "jackalope/jackalope-doctrine-dbal": "^1.3",
        "symfony-cmf/routing-auto-bundle": "^2.0",
        "symfony-cmf/routing-bundle": "^2.0",
        "symfony/console": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/web-server-bundle": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "behat/symfony2-extension": "^2.1",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "phpspec/phpspec": "^4.3",
        "symfony/dotenv": "^4.0",
        "symfony/flex": "^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "conflict": {
        "symfony/symfony": "*",
        "symfony/twig-bundle": "<3.3",
        "symfony/debug": "<3.3"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Neimad\\": "lib/neimad"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],

        "prepare": [
            "bin/console doctrine:phpcr:init:dbal --drop --force --ansi",
            "bin/console doctrine:phpcr:repository:init --ansi",
            "bin/console doctrine:phpcr:fixtures:load --no-initialize --append --no-interaction"
        ],
        "test": [
            "phpspec run --format=dot --ansi",
            "behat --format=progress --colors"
        ],
        "check": [
            "@composer diagnose --ansi",
            "@composer check-platform-reqs --ansi",
            "@composer prepare -- --env=test",
            "@test"
        ],
        "clean": [
            "rm -R ./var/*"
        ]
    },
    "scripts-descriptions": {
        "prepare": "Prepares the development environment.",
        "test": "Runs all tests.",
        "check": "Checks everything is fine.",
        "clean": "Clean the mess"
    },
    "archive": {
        "exclude": [
            "vendor",
            "var",
            "symfony.lock",
            "behat.yml.dist",
            "features",
            "spec",
            ".vscode"
        ]
    },
    "extra": {
        "symfony": {
            "id": "01BZPY5S44695N0GPANRNAS19Z",
            "allow-contrib": true
        }
    }
}
